<h1>Listing teachers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birthday</th>
    <th>Classroom</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.name %></td>
    <td><%= teacher.birthday %></td>
    <td><%= Classroom.find(teacher.classroom_id).code %></td>
    <td><%= link_to 'Show', teacher %></td>
    <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
    <td><%= button_to "Delete", teacher , :method=>:delete, :class=>:destroy %></td>
  </tr>
<% end %>
</table>

